<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/viewContainer"
    android:orientation="vertical"
    tools:context=".view.fragment.MainLoginFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MTL App"
        android:layout_above="@id/layout_login"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:textSize="32sp"
        android:textColor="@android:color/white"
        />

    <LinearLayout
        android:id="@+id/layout_login"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:background="@drawable/bg_frame_login">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/view_title"
            android:weightSum="2"
            android:padding="0dp"
            >
            <Button
                android:id="@+id/btnlogin"
                android:text="Login"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:layout_width="0dp"
                android:textColor="@android:color/white"
                android:background="@drawable/login_register_selector"
                android:layout_height="wrap_content"/>
            <Button
                android:id="@+id/btnregister"
                android:text="Register"
                android:background="@drawable/login_register_selector"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:layout_width="0dp"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:id="@+id/fragment_field"
            android:orientation="vertical"
            />

    </LinearLayout>

</RelativeLayout>